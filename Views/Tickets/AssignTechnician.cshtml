@model JATS.Models.ViewModel.AssignTechnicianViewModel

<div class="container">
    <h2>Assign Techninican for @Model.Ticket.Title</h2>
    <a stye="" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">@Model.Ticket.Project.Name</a>
    <div class="row">
        <div class="card">
            <div class="card-header">
                <label class="control-label">Assign a technician</label>
            </div>
            <div class="card-body">
                <form method="post"
                      asp-action="AssignTechnician"
                      asp-controller="Tickets">
                    <input asp-for="Ticket.Id"
                           hidden />
                    <p>Description: @Model.Ticket.Description</p>
                    <div class="form-group">
                        <label class="col-form-label">Select Technicians</label>
                        <select required
                                asp-for="TechnicianId"
                                class="form-control"></select>
                        <option></option>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit"
                               value="Assign"
                               class="btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div>
        <a asp-action="UnassignedTickets" asp-controller="Tickets">Unassigned Tickets</a>
    </div>
</div>