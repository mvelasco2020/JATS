@model ProjectMembersViewModel

<div class="container">
    <h2>Assign Memebers for</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>@Model.Project.Name</h3>
            <div class="card">
                <div class="card-header">
                    <label asp-for="@Model.Users">Assign team members for Project</label>
                </div>
                <div class="card-body">
                    <form method="post"
                          asp-action="AssignMembers"
                          asp-controller="Projects">
                        <input type="hidden" asp-for="Project.Id" />
                        <div class="col-12-mb-3">
                            <select required
                                    asp-for="@Model.SelectedUsers"
                                    asp-items="@Model.Users"
                                    multiple="multiple"
                                    class="form-control">
                            </select>
                        </div>
                        <div>
                            <input type="submit"
                                   class="btn alert-primary"
                                   value="Assign Users" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <a asp-action="Details" asp-route-id="@Model.Project.Id">Back to details</a>
</div>