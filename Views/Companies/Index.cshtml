                                        </div>
                                    </td>
                                    <td class="text-xs font-weight-bold">
                                        @{
                                            var memberRole = (await RoleService.GetUserRolesAsync(member));

                                        }
                                        <span class="my-2 text-xs"> @memberRole.First() </span>
                                    </td>
                                    <td class="text-xs font-weight-bold">
                                        <span class="my-2 text-xs"> @member.Email </span>
                                    </td>
                                    <td class="text-xs font-weight-bold">
                                        <span class="my-2 text-xs"> @member.PhoneNumber </span>
