@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@using JATS.Services.Interfaces
@inject UserManager<JTUser> UserManager;
@inject ICompanyInfoService CompanyInfoService

@{
    ViewData["Title"] = "Two-factor authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
    JTUser currentUser = await UserManager.GetUserAsync(User);
    Company company = await CompanyInfoService.GetCompanyByIdAsync(currentUser.CompanyId);
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card mt-3 mt-md-0">
    <div class="card-header text-center pb-0">
        <h4>@ViewData["Title"]</h4>
        @if (company.Name == "SpaceX")
        {
            <p class="text-danger">Some info for the demo accounts cannot be modified</p>
        }
        @{
            var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
            @if (consentFeature?.CanTrack ?? true)
            {
                @if (Model.Is2faEnabled)
                {
                    if (Model.RecoveryCodesLeft == 0)
                    {
                        <div class="alert alert-danger">
                            <strong>You have no recovery codes left.</strong>
                            <p>You must <a asp-page="./GenerateRecoveryCodes">generate a new set of recovery codes</a> before you can log in with a recovery code.</p>
                        </div>
                    }
                    else if (Model.RecoveryCodesLeft == 1)
                    {
                        <div class="alert alert-danger">
                            <strong>You have 1 recovery code left.</strong>
                            <p>You can <a asp-page="./GenerateRecoveryCodes">generate a new set of recovery codes</a>.</p>
                        </div>
                    }
                    else if (Model.RecoveryCodesLeft <= 3)
                    {
                        <div class="alert alert-warning">
                            <strong>You have @Model.RecoveryCodesLeft recovery codes left.</strong>
                            <p>You should <a asp-page="./GenerateRecoveryCodes">generate a new set of recovery codes</a>.</p>
                        </div>
                    }

                    if (Model.IsMachineRemembered)
                    {
                        <form method="post" style="display: inline-block">
                            <button type="submit" class="btn btn-primary btn-round">Forget this browser</button>
                        </form>
                    }
                    <a asp-page="./Disable2fa" class="btn btn-primary btn-round">Disable 2FA</a>
                    <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary btn-round">Reset recovery codes</a>
                }

                <h5>Authenticator app</h5>

                <div class="card-body">
                    @if (!Model.HasAuthenticator)
                    {
                        @if (company.Name == "SpaceX")
                        {
                            <a id="enable-authenticator"
               asp-page="./EnableAuthenticator"
               class="btn btn-primary btn-round disabled">Add authenticator app</a>

                        }
                        else
                        {

                            <a id="enable-authenticator"
               asp-page="./EnableAuthenticator"
               class="btn btn-primary btn-round">Add authenticator app</a>
                        }
                    }
                    else
                    {
                        @if (company.Name == "SpaceX")
                        {
                            <a id="enable-authenticator"
               asp-page="./EnableAuthenticator"
               class="btn btn-primary btn-round disabled">
                                Set up authenticator app
                            </a>
                            <a id="reset-authenticator"
               asp-page="./ResetAuthenticator"
               class="btn btn-primary btn-round disabled">
                                Reset authenticator app
                            </a>

                        }
                        else
                        {

                            <a id="enable-authenticator"
               asp-page="./EnableAuthenticator"
               class="btn btn-primary btn-round">
                                Set up authenticator app
                            </a>
                            <a id="reset-authenticator"
               asp-page="./ResetAuthenticator"
               class="btn btn-primary btn-round">
                                Reset authenticator app
                            </a>
                        }
                    }
                </div>

            }
            else
            {
                <div class="alert alert-danger">
                    <strong>Privacy and cookie policy have not been accepted.</strong>
                    <p>You must accept the policy before you can enable two factor authentication.</p>
                </div>
            }

        }
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }
